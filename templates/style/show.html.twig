{% extends 'base.html.twig' %}

{% block title %}Style{% endblock %}

{% block body %}
<div class="container">
    <h1>Style</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ style.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ style.name }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-primary"><a href="{{ path('style_index') }}" style="color: white;">back to list</a></button>

    <button class="btn btn-success"><a href="{{ path('style_edit', {'id': style.id}) }}" style="color: white;">edit</a></button>

    {{ include('style/_delete_form.html.twig') }}
</div>
{% endblock %}
