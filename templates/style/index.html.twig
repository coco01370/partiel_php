{% extends 'base.html.twig' %}

{% block title %}Style index{% endblock %}

{% block body %}
<div class="container">
    <h1>Style index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for style in styles %}
            <tr>
                <td>{{ style.id }}</td>
                <td>{{ style.name }}</td>
                <td>
                    <button class="btn btn-success"><a href="{{ path('style_show', {'id': style.id}) }}" style="color: white;">show</a></button>
                    <button class="btn btn-success"><a href="{{ path('style_edit', {'id': style.id}) }}" style="color: white;">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-success"><a href="{{ path('style_new') }}" style="color: white;">Create new</a></button>
</div>
{% endblock %}
