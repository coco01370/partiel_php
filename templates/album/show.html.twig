{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
<div class="container">
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>ReleaseYear</th>
                <td>{{ album.releaseYear }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ album.cover }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-primary"><a href="{{ path('album_index') }}"  style="color: white">back to list</a></button>
    <button type="button" class="btn btn-success"><a href="{{ path('album_edit', {'id': album.id}) }}"  style="color: white">edit</a></button>
    

    {{ include('album/_delete_form.html.twig') }}
</div>
{% endblock %}
