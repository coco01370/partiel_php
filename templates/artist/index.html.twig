{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
<div class="container">
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.picture }}</td>
                <td>
                    <button class="btn btn-success"><a href="{{ path('artist_show', {'id': artist.id}) }}" style="color: white;">show</a></button>
                    <button class="btn btn-success"><a href="{{ path('artist_edit', {'id': artist.id}) }}" style="color: white;">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-success"><a href="{{ path('artist_new') }}" style="color: white;">Create new</a></button>
</div>
{% endblock %}
