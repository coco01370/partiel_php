{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
<div class="container">
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ artist.picture }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-primary"><a href="{{ path('artist_index') }}" style="color: white;">back to list</a></button>

    <button class="btn btn-success"><a href="{{ path('artist_edit', {'id': artist.id}) }}" style="color: white;">edit</a></button>

    {{ include('artist/_delete_form.html.twig') }}
</div>
{% endblock %}
